{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js", "**/?(*.)+(spec|test).js"],
  "collectCoverageFrom": [
    "services/**/*.js",
    "controllers/**/*.js",
    "models/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 30000,
  "verbose": true
}